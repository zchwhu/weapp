page{
    height: 100%;
    background-color: #b3d4db;
}

.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-avatar {
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx; 
}

.user-name{
    margin-top: 100rpx;
    font-size: 32rpx;
    font-weight: 700;
}

.moto-container{
    width: 200rpx;
    height: 80rpx;
    margin-top: 200rpx;
    text-align: center;
    border: 1px solid #405f80;
    border-radius: 5px;
}

.moto{
    font-size: 22rpx;
    font-weight: 700;
    line-height: 80rpx;
    color: #405f80;
}

