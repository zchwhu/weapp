.container{
    display: flex;
    flex-direction: column;
}

.head-image{
    width: 100%;
    height: 460rpx;
}

.author-date{
    display: flex;
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.avatar{
    height: 64rpx;
    width: 64rpx;
    vertical-align: middle;
}

.author{
    margin-left: 20rpx;
    vertical-align: middle;
    font-size: 30rpx;
    font-weight: 300;
    color: #666;
}

.const-text{
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #999;
}

.date{
    margin-left: 30rpx;
    vertical-align: middle;
    color: #999;
    font-size: 24rpx;
}

.title{
    margin-left: 40rpx;
    margin-top: 30rpx;
    letter-spacing: 2px;
    font-size: 36rpx;
    font-weight: 700;
    color: #4b556c;
}

.tool{
    margin-top: 20rpx;
}

.circle-img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}

.circle-img image{
    width: 90rpx;
    height: 90rpx;
}

.share-img{
    margin-left: 30rpx;
}

.horizon{
    position: relative;
    top: 46rpx;
    width: 660rpx;
    height: 1px;
    margin: 0 auto;
    vertical-align: middle;
    z-index: -99;
    background-color: #e5e5e5;
}

.detail{
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2rpx;
    color: #666;
}

.audio{
    position: absolute;
    width: 102rpx;
    height: 110rpx;
    left: 50%;
    top: 180rpx;
    margin-left: -51rpx;
    opacity: 0.6;
}